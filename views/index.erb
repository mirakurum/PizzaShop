<h2>Welcome to Pizza Shop</h2>

<div class="row">

    <% @products.each do |p| %>
    <div class="col-md-3">
      <div>
       <b> <%= p.title %> </b>
      </div>
      <div>
        <img src="<%= p.path_to_image %>" height="130">
      </div>
      <div>
        <i><%= p.description %></i>
      </div>
      <div>
        Size <%= p.size %> cm
      </div>
      <div>
        Price <%= p.price %> rub
      </div>
      <div>
        <button class="btn btn-success btn-sm" onclick="add_to_cart()">Add to cart</button>
      </div>
    </div>
    <% end %>

</div>
<br><br>
<button class = "btn btn-primary" onclick="something()">Click me!</button>
